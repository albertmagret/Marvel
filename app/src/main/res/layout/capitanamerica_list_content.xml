<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="100dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/text_title_id">


            <RelativeLayout android:id="@+id/relativeLayout_image_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ProgressBar android:id="@+id/progress_id"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />

                <ImageView android:id="@+id/image_row_id"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    />

            </RelativeLayout>

            <TextView android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingBottom="@dimen/fab_margin"
                android:paddingTop="@dimen/fab_margin"
                android:layout_toRightOf="@+id/relativeLayout_image_id"
                android:textSize="16sp"
                android:ems="10"
                android:textColor="@color/colorPrimary"
                />



            <!--TextView android:id="@+id/text_Release_date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_below="@+id/relativeLayout_image_id"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="@+id/text_title_id"
                android:textSize="16sp"
                android:ems="10"
                android:textColor="@color/colorPrimary"
            /-->

            <TextView android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ems="10"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingRight="@dimen/fab_margin"
                android:paddingBottom="@dimen/fab_margin"
                android:layout_below="@+id/id"
                android:visibility="gone"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>
</LinearLayout>